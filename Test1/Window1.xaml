<Window x:Class="Test1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="資料新增" Height="380" Width="380" WindowStartupLocation="CenterOwner" FontFamily="Microsoft JhengHei">
    <Grid>
        <Border Background="#F7F9FB" CornerRadius="12" Padding="28">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="PanelID" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,6"/>
                <TextBox x:Name="PanelIDTextBox" FontSize="20" Height="34" Grid.Row="0" Grid.Column="1" Margin="0,6,0,6"/>

                <TextBlock Text="LOTID" FontSize="16" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,6"/>
                <TextBox x:Name="LotIDTextBox" FontSize="20" Height="34" Grid.Row="1" Grid.Column="1" Margin="0,6,0,6"/>

                <TextBlock Text="CarrierID" FontSize="16" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,6"/>
                <TextBox x:Name="CarrierIDTextBox" FontSize="20" Height="34" Grid.Row="2" Grid.Column="1" Margin="0,6,0,6"
                         KeyDown="CarrierIDTextBox_KeyDown"/>

                <TextBlock Text="日期" FontSize="16" FontWeight="Bold" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,6"/>
                <DatePicker x:Name="DatePicker" FontSize="20" Height="34" Grid.Row="3" Grid.Column="1" Margin="0,6,0,6"/>

                <TextBlock Text="時間" FontSize="16" FontWeight="Bold" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,6"/>
                <TextBox x:Name="TimeTextBox" FontSize="20" Height="34"
                         Grid.Row="4" Grid.Column="1" Margin="0,6,0,6" Text="HH:mm:ss"/>

                <Button Content="新增" FontSize="16" Height="35" Width="110" 
                        Grid.Row="5" HorizontalAlignment="Left"
                        Margin="0,25,0,-10" Click="Add_Click"
                        Background="#374FC7" Foreground="White"
                        BorderThickness="0" Grid.Column="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>







