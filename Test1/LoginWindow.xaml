<Window x:Class="Test1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登入"
        Height="280"
        Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5"
        FontFamily="Segoe UI">
    <Grid Margin="30,10,30,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- 帳號提示 -->
        <TextBlock Text="請輸入帳號：" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="#333333" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <TextBox x:Name="UsernameTextBox"
                 Grid.Row="1"
                 FontSize="18"
                 Padding="10,2,10,2"
                 Width="230"
                 HorizontalAlignment="Center"
                 BorderBrush="#888"
                 BorderThickness="1"
                 Background="White"
                 VerticalContentAlignment="Center"/>

        <!-- 密碼提示 -->
        <TextBlock Text="請輸入密碼：" 
                   Grid.Row="2"
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="#333333" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
        <!-- 密碼輸入框 -->
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="3"
                     FontSize="22" 
                     Padding="10,2,10,0"
                     Width="230"
                     HorizontalAlignment="Center"
                     BorderBrush="#888" 
                     BorderThickness="1"
                     Background="White"
                     VerticalContentAlignment="Center"/>

        
        <Button x:Name="LoginButton"
                Grid.Row="5" 
                Content="登入"
                Width="120" 
                HorizontalAlignment="Center"
                IsDefault="True"
                FontWeight="Bold"
                Cursor="Hand"
                BorderThickness="0"
                Margin="0,20,0,-16"
                Click="LoginButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#45a049"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#3e8e41"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>







