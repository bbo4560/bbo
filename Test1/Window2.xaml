<Window x:Class="Test1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="資料修改" Height="380" Width="380" WindowStartupLocation="CenterOwner" FontFamily="Microsoft JhengHei">
    <Grid>
        <Border Background="#F7F9FB" CornerRadius="12" Padding="28">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="PanelID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,6,0,6"/>
                <TextBox x:Name="PanelIDTextBox" Grid.Row="0" Grid.Column="1" Height="34" FontSize="20" VerticalContentAlignment="Center" Margin="0,6,0,6"/>

                <TextBlock Text="LOTID" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,6,0,6"/>
                <TextBox x:Name="LotIDTextBox" Grid.Row="1" Grid.Column="1" Height="34" FontSize="20" VerticalContentAlignment="Center" Margin="0,6,0,6"/>

                <TextBlock Text="CarrierID" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,6,0,6"/>
                <TextBox x:Name="CarrierIDTextBox" Grid.Row="2" Grid.Column="1" Height="34" FontSize="20" VerticalContentAlignment="Center"  Margin="0,6,0,6"/>

                <TextBlock Text="日期" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,6,0,6"/>
                <DatePicker x:Name="DatePicker" Grid.Row="3" Grid.Column="1" Height="34" FontSize="20" Margin="0,6,0,6"/>

                <TextBlock Text="時間" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,6,0,6"/>
                <TextBox x:Name="TimeTextBox" Grid.Row="4" Grid.Column="1" Height="34" FontSize="20" VerticalContentAlignment="Center" Margin="0,6,0,6"
                         Text="HH:mm:ss"/>

                <Button Content="修改" Grid.Row="5" FontSize="16"
                        Height="35" Width="110" HorizontalAlignment="Right"
                        Margin="0,25,90,-10" Click="Edit_Click"
                        Background="#374FC7" Foreground="White" BorderThickness="0" Grid.RowSpan="2" Grid.Column="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>





