<Window x:Class="Test1.OperationLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="操作紀錄" Height="620" Width="960"
        WindowStartupLocation="CenterOwner"
        FontFamily="Microsoft JhengHei">
    <Grid Margin="20">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F4F7FB" Offset="0"/>
                <GradientStop Color="#E1E8F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0"
                             Padding="16"
                             Margin="0,0,0,12"
                             Background="White">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Cursor="">
                
                <Button Content="清除紀錄"
                        Click="ClearLog_Click"
                        FontSize="16"
                        Width="110"
                        Height="36"
                        Margin="0,0,8,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
                <TextBlock x:Name="StatusText"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#666"
                           Margin="16,0,0,0"/>
                <TextBlock VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#999"
                           Margin="16,0,0,0"
                           Text="最新紀錄顯示在下方列表中"/>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1"
                             Padding="12"
                             Background="White">
            <DataGrid x:Name="LogDataGrid"
                      ItemsSource="{Binding LogEntries}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#F5F8FF"
                      RowBackground="White"
                      GridLinesVisibility="All"
                      ColumnWidth="*"
                      FontSize="14"
                      materialDesign:DataGridAssist.CellPadding="10,6"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="10,6">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="操作時間"
                                        Binding="{Binding Timestamp, StringFormat=yyyy/MM/dd HH:mm:ss}"
                                        Width="200"/>
                    <DataGridTextColumn Header="操作類型"
                                        Binding="{Binding OperationType}"
                                        Width="140"/>
                    <DataGridTextColumn Header="被操作資料"
                                        Binding="{Binding Target}"
                                        Width="*"/>
                    <DataGridTextColumn Header="詳細描述"
                                        Binding="{Binding Detail}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2"
                             Padding="12"
                             Margin="0,12,0,0"
                             Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="關閉"
                        Click="Close_Click"
                        FontSize="16"
                        Width="110"
                        Height="36"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
