<Window x:Class="TEST2.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="查詢資料" Height="450" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="PanelID" Margin="0,0,0,20"/>
        <TextBox x:Name="txtPanelID" Grid.Row="0" Grid.Column="1" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="LOTID" Margin="0,0,0,20"/>
        <TextBox x:Name="txtLOTID" Grid.Row="1" Grid.Column="1" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="2" Text="CarrierID" Margin="0,0,0,20"/>
        <TextBox x:Name="txtCarrierID" Grid.Row="2" Grid.Column="1" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="3" Text="日期" Margin="0,0,0,20"/>
        <DatePicker x:Name="dpDate" Grid.Row="3" Grid.Column="1" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="4" Text="時間" Margin="0,0,0,20"/>
        <TextBox x:Name="txtTime" Grid.Row="4" Grid.Column="1" Margin="0,0,0,20"/>

        <Button Grid.Row="6" Grid.ColumnSpan="2" Content="查詢" Click="BtnQuery_Click" Width="150" Height="45"/>
    </Grid>
</Window>